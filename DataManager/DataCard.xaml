<UserControl x:Class="DataManager.DataCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataManager"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Button Content="预   览" Name="btn_Preview"    Margin="0,10,0,0" Height="20" VerticalAlignment="Top" Width="40" Grid.Column="1" FontSize="8" Click="Btn_Preview_Click_1" />
        <Button Content="下   载" Name="btn_LoadData" Margin="0,0,0,10" Grid.Column="1" Height="20" VerticalAlignment="Bottom" Width="40" FontSize="8"/>
        <Button Content="详细信息" Name="btn_Info" Margin="0,0,0,30" Grid.Column="1" Height="20" VerticalAlignment="Bottom" Width="40" FontSize="8" Click="Btn_Info_Click"/>
        <Image HorizontalAlignment="Left" Height="80" Name="image1" VerticalAlignment="Top" Width="80"/>
        <ListBox   Margin="80,0,0,0" Name="lb_SatelliteInformation"/>

    </Grid>
</UserControl>
